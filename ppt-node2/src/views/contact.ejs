<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include('partials/head') %>
    <title>
        <%= title %>
    </title>
</head>

<body>
    <%- include('partials/navigation') %>

        <aside class="container vh-100  d-flex text-center justify-content-center align-items-center">

                <aside class="card bg-dark text-white text-center">
                    <div class="card-header">
                        <h3>Contact Me</h3>
                    </div>

                    <div class="card-body text-start">
                        <form action="">
                            <div class="mb-3">
                                <label for="email">Correo</label>
                                <input type="email" placeholder="email" class="form-control">
                            </div>

                            <div class="m-3">
                                <label for="mesage">Mensaje</label>
                                <textarea name="mesage" row="3" class="form-control"
                                    placeholder="Write a Mesage"></textarea>
                            </div>
                            <button type="button" class="btn btn-primary btn-  block">Save</button>

                        </form>
                    </div>
                </aside>
        </aside>
        <%- include('partials/footer') %>
</body>

</html>